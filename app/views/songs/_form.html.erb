<%= form_for(@song, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @song.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h4>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :path, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :path, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :played, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :played, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recorded_date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :recorded_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :downloaded_times, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :downloaded_times, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
