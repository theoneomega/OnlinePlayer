<div class="page-header">
  <%= link_to new_song_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Song
  <% end %>
  <h1>Listing songs</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Path</th>
            <th>Played</th>
            <th>Recorded date</th>
            <th>Downloaded times</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @songs) do |song| %>
            <td><%= song.name %></td>
            <td><%= song.path %></td>
            <td><%= song.played %></td>
            <td><%= song.recorded_date %></td>
            <td><%= song.downloaded_times %></td>
            <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
