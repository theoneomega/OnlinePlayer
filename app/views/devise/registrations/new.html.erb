<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <h2 class="text-center">Nuevo usuario</h2>
    <%= form_for(:user, :html=> { :class=> "form-horizontal well", role: "form" }, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :first_name, "Nombre",:class=> "control-label col-md-2"%>
          <div class="col-md-10">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Apellido", class: "control-label col-md-2" %>
          <div class="col-md-10">
            <%= f.text_field :last_name, class:"form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :username,"Usuario", class: "control-label col-md-2" %>
          <div class="col-md-10">
            <%= f.text_field :username, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, "Correo", class: "control-label col-md-2" %>
          <div class="col-md-10">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, "Contraseña", class: "control-label col-md-2" %>
          <div class="col-md-10">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmar contraseña", class: "control-label col-md-2" %>
          <div class="col-md-10">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-12">
            <%= f.submit "Guardar", class: "btn btn-primary pull-right" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
