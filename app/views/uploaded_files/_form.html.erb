<%= form_for(@uploaded_file, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @uploaded_file.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@uploaded_file.errors.count, "error") %> prohibited this uploaded_file from being saved:</h4>

      <ul>
      <% @uploaded_file.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :audio, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :audio, class: "form-control" %>
    </div>
  </div>
<div class="form-group">
   <label for="descripcion" class="col-sm-2 control-label"> Descripcion </label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="descripcion"> </input>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row">
  <div class="col-md-offset-3 col-md-6 well">
    <p>**********palabras clave**********</p>
    <p>---"predica" + </p>
    <p>dany => "dany"</p>
    <p>pastor => "patricio"</p>
    <p>pastora => "raquel"</p>
    <p>micha => "micha"</p>
    <p>---"alabanza" + "grupo1" o "grupo2"</p>
    <p>audio completo => "full"</p>
  </div>
  </div>
<% end %>
